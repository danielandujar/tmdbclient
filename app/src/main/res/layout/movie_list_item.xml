<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/listItemBackground"
        app:cardElevation="1dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="400dp">

        <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/poster"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/txtMovieName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="John Wick Chapter 3 - Parabellum"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/star3"/>

        <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_border_24dp"
                android:layout_margin="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/star2"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
        />
        <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_border_24dp"
                android:layout_margin="5dp"
                app:layout_constraintStart_toEndOf="@id/star1"
                app:layout_constraintEnd_toStartOf="@+id/star3"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
        />
        <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_border_24dp"
                android:layout_margin="5dp"
                app:layout_constraintStart_toEndOf="@id/star2"
                app:layout_constraintEnd_toStartOf="@+id/star4"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
        />
        <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_border_24dp"
                android:layout_margin="5dp"
                app:layout_constraintStart_toEndOf="@id/star3"
                app:layout_constraintEnd_toStartOf="@+id/star5"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
        />
        <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_star_border_24dp"
                app:layout_constraintStart_toEndOf="@id/star4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgPoster"
        />
        <ImageButton
                android:id="@+id/btnAddWatchList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_list_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnFavorite"
                app:layout_constraintTop_toBottomOf="@id/txtMovieName"
        />
        <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite_outline_24dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAddWatchList"
                app:layout_constraintTop_toBottomOf="@id/txtMovieName"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
