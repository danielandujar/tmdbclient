<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/listItemBackground"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
    <androidx.cardview.widget.CardView
            android:id="@+id/posterHolder"
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="5dp">
        <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster"
                android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorDivider"/>
    <TextView
            android:id="@+id/txtMovieTitle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@id/posterHolder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="John Wick: Chapter 3 - Parabellum"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ImageView
            android:id="@+id/imvStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_24dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="@id/txtMovieTitle"
            app:layout_constraintEnd_toStartOf="@+id/imvStar2"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
    />
    <ImageView
            android:id="@+id/imvStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_24dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/imvStar1"
            app:layout_constraintEnd_toStartOf="@+id/imvStar3"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
    />
    <ImageView
            android:id="@+id/imvStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_24dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/imvStar2"
            app:layout_constraintEnd_toStartOf="@+id/imvStar4"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
    />
    <ImageView
            android:id="@+id/imvStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_24dp"
            android:layout_margin="5dp"
            app:layout_constraintStart_toEndOf="@id/imvStar3"
            app:layout_constraintEnd_toStartOf="@+id/imvStar5"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
    />
    <ImageView
            android:id="@+id/imvStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_star_border_24dp"
            app:layout_constraintStart_toEndOf="@id/imvStar4"
            app:layout_constraintEnd_toEndOf="@id/txtMovieTitle"
            app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
    />
    <ImageButton
            android:id="@+id/btnAddWatchList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list_24dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/txtMovieTitle"
            app:layout_constraintBottom_toTopOf="@id/btnAddFavorite"
    />
    <TextView
            android:id="@+id/txtAddWatchList"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:textColor="@color/colorSecondaryText"
            android:text="@string/add_watchlist"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/txtMovieTitle"
            app:layout_constraintStart_toEndOf="@id/btnAddFavorite"
            app:layout_constraintBottom_toTopOf="@id/btnAddFavorite"
    />
    <ImageButton
            android:id="@+id/btnAddFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_outline_24dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/txtMovieTitle"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:id="@+id/txtAddFavorite"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:textColor="@color/colorSecondaryText"
            android:text="@string/add_favorites"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/txtMovieTitle"
            app:layout_constraintStart_toEndOf="@id/btnAddFavorite"
            app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>